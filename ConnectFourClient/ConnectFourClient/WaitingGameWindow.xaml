<Window x:Class="ConnectFourClient.WaitingGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectFourClient"
        mc:Ignorable="d"
        Title="Waiting Players window" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Grid.Column="1" Grid.RowSpan="3">
            <Label  >Connected Clients:</Label>
            <ListBox Margin="10" Name="lbUsers" Height="200" />

        </StackPanel>

    </Grid>
</Window>
