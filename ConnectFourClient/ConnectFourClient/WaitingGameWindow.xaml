<Window x:Class="ConnectFourClient.WaitingGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectFourClient"
        mc:Ignorable="d"
        Title="Waiting Players window" Height="309.072" Width="409.487" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <StackPanel Margin="0,0,-0.4,-0.4">
            <Label>Pick opposite player from connected players:</Label>
            <ListBox Margin="10" Name="lbUsers" Height="200" ItemsSource="{Binding connectedUsers}"/>
            <Button x:Name="btnPick" Content="Pick" Click="btnPick_Click"/>

        </StackPanel>

    </Grid>
</Window>
